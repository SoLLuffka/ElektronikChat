<UserControl x:Class="ElektronikChat.View.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElektronikChat.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Rejestracja"
                       Foreground="White"
                       FontSize="30"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1"  Width="600"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <!---elementy formularza-->
            <DockPanel Margin="0,0,0,20">
                <TextBlock Text="Imię: "
                       Foreground="White"
                       FontSize="20"/>
                <TextBox 
                         FontSize="20"
                         BorderThickness="0,0,0,2"
                         BorderBrush="#1468c8"
                         Background="Transparent"
                         VerticalContentAlignment="Center"
                         Width="180"
                         Margin="0,0,20,0"/>
                <TextBlock Text="Nazwisko: "
                         Foreground="White"
                         FontSize="20"/>
                <TextBox 
                         FontSize="20"
                         BorderThickness="0,0,0,2"
                         BorderBrush="#1468c8"
                         Background="Transparent"
                         VerticalContentAlignment="Center"
                         Width="260"/>
            </DockPanel>

            <DockPanel Margin="0,0,0,20">
                <TextBlock Text="E-mail: "
                      Foreground="White"
                      FontSize="20"/>
                <TextBox 
                     FontSize="20"
                     BorderThickness="0,0,0,2"
                     BorderBrush="#1468c8"
                     Background="Transparent"
                     VerticalContentAlignment="Center"
                     Width="230"
                     Margin="0,0,20,0"/>
                <TextBlock Text="Data Urodzenia: "
                     Foreground="White"
                     FontSize="20"/>
                <DatePicker 
                     Background="Transparent"
                     Width="140"
                     VerticalContentAlignment="Center"/>
            </DockPanel>

            <DockPanel Margin="0,0,0,40">
                <TextBlock Text="login: "
                      Foreground="White"
                      FontSize="20"/>
                <TextBox 
                     FontSize="20"
                     BorderThickness="0,0,0,2"
                     BorderBrush="#1468c8"
                     Background="Transparent"
                     VerticalContentAlignment="Center"
                     Width="200"
                     Margin="0,0,20,0"/>
                <TextBlock Text="hasło: "
                     Foreground="White"
                     FontSize="20"/>
                <TextBox 
                     FontSize="20"
                     BorderThickness="0,0,0,2"
                     BorderBrush="#1468c8"
                     Background="Transparent"
                     VerticalContentAlignment="Center"
                     Width="270"/>
            </DockPanel>

            <Button 
                    Width="260"
                    Height="60"
                    Content="Zarejestruj się"
                    FontSize="20"/>

        </StackPanel>

    </Grid>
</UserControl>
