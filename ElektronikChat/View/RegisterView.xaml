<UserControl x:Class="ElektronikChat.View.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElektronikChat.View" xmlns:viewmodel="clr-namespace:ElektronikChat.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080">
    <UserControl.DataContext>
        <viewmodel:MainViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Rejestracja"
                       Foreground="White"
                       FontSize="30"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1"  Width="600"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <!---elementy formularza--> <!--x:name sigan :)-->
            <DockPanel Margin="0,0,0,20">
                <!--imie--> 
                <TextBlock Text="Imię: "
                       Foreground="White"
                       FontSize="20"/>
                
                <TextBox x:Name="firstname"
                         FontSize="20"
                         BorderThickness="0,0,0,2"
                         BorderBrush="#1468c8"
                         Background="Transparent"
                         VerticalContentAlignment="Center"
                         Width="180"
                         Margin="0,0,20,0"/>
                <!--nazwisko-->
                <TextBlock Text="Nazwisko: "
                         Foreground="White"
                         FontSize="20"/>

                <TextBox x:Name="lastname"
                         FontSize="20"
                         BorderThickness="0,0,0,2"
                         BorderBrush="#1468c8"
                         Background="Transparent"
                         VerticalContentAlignment="Center"
                         Width="260"/>
            </DockPanel>

            <DockPanel Margin="0,0,0,20">
                <!--E-mail-->
                <TextBlock Text="E-mail: "
                      Foreground="White"
                      FontSize="20"/>

                <TextBox x:Name="email"
                     FontSize="20"
                     BorderThickness="0,0,0,2"
                     BorderBrush="#1468c8"
                     Background="Transparent"
                     VerticalContentAlignment="Center"
                     Width="230"
                     Margin="0,0,20,0"/>
                <!--login-->
                <TextBlock Text="login: "
                      Foreground="White"
                      FontSize="20"/>

                <TextBox x:Name="login"
                     FontSize="20"
                     BorderThickness="0,0,0,2"
                     BorderBrush="#1468c8"
                     Background="Transparent"
                     VerticalContentAlignment="Center"
                     Width="200"
                     Margin="0,0,20,0"/>
            </DockPanel>

            <DockPanel Margin="0,0,0,40">
                <!--haslo 1-->
                <TextBlock Text="hasło: "
                     Foreground="White"
                     FontSize="20"/>

                <PasswordBox x:Name="password"
                     FontSize="20"
                     BorderThickness="0,0,0,2"
                     BorderBrush="#1468c8"
                     Background="Transparent"
                     VerticalContentAlignment="Center"
                     Width="194"
                     Margin="0,0,20,0"/>
                <!--haslo 2-->
                <TextBlock Text="Powtórz hasło: "
                     Foreground="White"
                     FontSize="20"/>

                <PasswordBox x:Name="password_check"
                     FontSize="20"
                     BorderThickness="0,0,0,2"
                     BorderBrush="#1468c8"
                     Background="Transparent"
                     VerticalContentAlignment="Center"
                     Width="194"/>
            </DockPanel>

            <Button 
                    Width="260"
                    Height="60"
                    Content="Zarejestruj się"
                    FontSize="20"/>

        </StackPanel>

    </Grid>
</UserControl>
