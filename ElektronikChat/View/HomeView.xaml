                           Margin="0,500,0,0">
                    <TextBlock Text="Masz Jutro Sprawdzian z:"
                           Foreground="White"
                           FontSize="30"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"                
                           Width="460"/>

                    <TextBlock Text="nazwa_sprawdzianu"
                           Foreground="White"
                           FontSize="30"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Stretch"
                           Width="300"
                           Margin="0,20,0,0"/>  
                </StackPanel>

                <!--column 1-->

                <StackPanel Grid.Column="1"
                           Height="240"
                           Width="460"
                           VerticalAlignment="Top"
                           Margin="0,20,0,0">
                    <TextBlock Text="Proponowane Czaty:"
                           Foreground="White"
                           FontSize="30"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"                
                           Width="460"/>

