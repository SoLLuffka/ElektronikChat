                </StackPanel>

                <StackPanel Grid.Column="1"
                           Height="160"
                           Width="460"
                           VerticalAlignment="Top"
                           Margin="0,320,0,0">
                    <TextBlock Text="Zadania Domowe:"
                           Foreground="White"
                           FontSize="30"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"                
