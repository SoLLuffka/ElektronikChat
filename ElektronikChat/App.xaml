<Application x:Class="ElektronikChat.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ElektronikChat"
             xmlns:view="clr-namespace:ElektronikChat.View"
             xmlns:viewModel="clr-namespace:ElektronikChat.ViewModel"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!---Podpięcie stylu do strony -->

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/HomeButtonTheme.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
                <!---widok menu glownego-->
                <view:HomeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:LoginViewModel}">
                <!---widok logowania-->
                <view:LoginView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:RegisterViewModel}">
                <!---widok rejestracji-->
                <view:RegisterView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>